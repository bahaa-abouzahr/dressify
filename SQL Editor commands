CREATE column array
alter table products
add column photos text[];

CREATE Column decimal
alter table products
add column price numeric(10,2) not null;

CREATE col INTEGER
alter table products
add column quantity_available integer not null;


to create NEW TYPE that can have only choosen values:
create type product_type as enum ('shirt', 'pants', 'shoes', 'jacket', 'hat');
alter table products
add column type product_type not null;